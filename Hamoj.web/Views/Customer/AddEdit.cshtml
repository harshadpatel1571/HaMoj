@model Hamoj.Service.Dto.CustomerDto

@{
    ViewData["Title"] = "Customer AddEdit";
}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add Customer</h4>
        <a type="submit" class="btn btn-primary" asp-controller="Customer" asp-action="Index">Back</a>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form method="post" asp-action="AddEdit">

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Company Name</label>
                        <input type="text" class="form-control" placeholder="Company Name" asp-for="CompanyName">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="Office_No" class="form-label">Office Number</label>
                        <input type="text" class="form-control" placeholder="Office Number" asp-for="Office_No" maxlength="10">
                        <span asp-validation-for="Office_No" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label">Mobile Number</label>
                        <input type="text" class="form-control restrict-input" placeholder="Mobile Number" id="mobileNumber" maxlength="10" asp-for="Mobile">
                        <span id="mobileNumberError" class="text-danger"></span>
                    </div>



                    <div class="mb-3 col-md-6">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" placeholder="City" asp-for="City">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">State</label>
                        <input type="text" class="form-control" placeholder="State" asp-for="State">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Pincode</label>
                        <input type="text" class="form-control" placeholder="Pincode" asp-for="Pincode">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Password</label>
                        <input type="password" value="@Model.Password" class="form-control" placeholder="Password" name="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="is_Active" checked>
                        <label class="form-check-label" for="flexSwitchCheckChecked">is Active</label>
                    </div>
                    <div>
                        <button type="submit" id="btnsave" class="btn btn-primary">Save</button>
                    </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.getElementById('mobileNumber').addEventListener('input', function () {
            this.value = this.value.replace(/[^0-9]/g, ''); // Allow only digits
            if (this.value.length > 10) {
                this.value = this.value.slice(0, 10); // Limit to max 10 digits
            }
        });
    </script>
}