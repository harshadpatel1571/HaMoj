@model Hamoj.Service.Dto.CustomerDto

@{
    ViewData["Title"] = "Customer AddEdit";
}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add Customer</h4>
        <a type="submit" class="btn btn-primary" asp-controller="Customer" asp-action="Index">Back</a>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form method="post" asp-action="AddEdit">

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Company Name</label>
                        <input type="text" class="form-control" placeholder="Company Name" asp-for="CompanyName">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Office Number</label>
                        <input type="text" class="form-control" placeholder="Office Number" asp-for="Office_No">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Mobile Number</label>
                        <input type="text" class="form-control" placeholder="Mobile Number" asp-for="Mobile">
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" placeholder="City" asp-for="City">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">State</label>
                        <input type="text" class="form-control" placeholder="State" asp-for="State">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Pincode</label>
                        <input type="text" class="form-control" placeholder="Pincode" asp-for="Pincode">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" placeholder="Password" name="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit" id="btnsave" class="btn btn-primary">Save</button>
                    </div>
            </form>
        </div>
    </div>
</div>

