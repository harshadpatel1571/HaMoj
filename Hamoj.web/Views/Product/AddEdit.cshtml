@model Hamoj.Service.Dto.ProductDto;

@{
    ViewData["Title"] = "Product AddEdit";
}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add Product</h4>
        <a type="submit" class="btn btn-primary" asp-controller="Product" asp-action="Index">Back</a>
    </div>
    <div class="card-body">
        <div class="basic-form">    
            <form method="post" asp-action="AddEdit" enctype="multipart/form-data">
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Category</label>
                        <select class="default-select form-control wide mb-3 col-md-6" asp-for="CategoryId" asp-items="@ViewBag.CategoryList">
                        <option value="">Select Category</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Product Name</label>
                        <input type="text" class="form-control" placeholder="Product Name"  asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Product Price</label>
                        <input type="text" class="form-control" placeholder="Product Price" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label>Product Image</label>
                        <input type="file" class="form-control" placeholder="Product Image"  asp-for="Imagefile">


                    </div>
                    <div class="mb-3 col-md-12">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" placeholder="Description"  asp-for="Description">
                    </div>
                </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
        </div>
    </div>
</div>

