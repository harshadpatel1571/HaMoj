@model List<Hamoj.Service.Dto.ProductDto>;

@{
    Layout = "~/Views/Shared/_Customer.cshtml";
    ViewData["Title"] = "Order Add";

}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />
    <form method="post">
        <div class="d-flex flex-wrap">
            @foreach (var product in Model)
            {
                <div class="card m-2">    
                    <div class="card-header">
                        <p class="card-text">@product.Name (@product.Price /-)</p>
                    </div>
                    <div class="card-body" style="width:12rem">
                        <img src="~/ProductImage/@product.Image" class="card-img-top" width="100px" height="100px">
                    </div>
                    <div class="col-auto mb-2">
                        <div class="input-group p-2">
                            <div class="input-group-text btn btn-primary btn-sm">Qty.</div>
                            <input type="text" class="form-control form-control-sm" placeholder="Qty" id="@product.Id">
                        </div>
                    </div>
                </div>
            }
        </div>
        <button type="button" class="btn btn-primary mt-2" id="btnOrder">Order Now</button>
    </form>

@section Scripts {
    <script>
        $("#btnOrder").click(function () {
            var products = [];
            $('.card').each(function () {
                var id = $(this).find('input[type="text"]').attr('id');
                var qtty = $(this).find('input[type="text"]').val();
                if (qtty) {
                    products.push({ id: id, qtty: qtty });
                }
            });

            if (products.length > 0) {
                $.ajax({
                    url: '/Order/CustomerProductOrder',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(products), // Serialize data to JSON directly
                    success: function (result) {
                        alert(result.msg);
                        window.location.reload();
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX error:', error);
                    }
                });
            } else {
                toaster('error', 'Select at least one product');
            }
        });
    </script>
}

