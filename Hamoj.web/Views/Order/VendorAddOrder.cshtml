@model List<Hamoj.Service.Dto.ProductDto>

@{
    Layout = "~/Views/Shared/_Customer.cshtml";
    ViewData["Title"] = "Order Add";
}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />
<form method="post">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body p-0">
                <div class="card-header">
                    @*  <label class="form-label">Customer</label>
                    <select class="default-select form-control wide" asp-items="@ViewBag.CustomerList" id="selectOfficeNo">
                    <option value="">Office Number</option>
                    <option value="">Guest</option>
                    </select> *@
                    <input type="text" name="name" value="" class="form-control" id="autocomplete" />
                </div>
                <div class="table-responsive order-list">
                    <table class="table items-table">
                        <tbody>
                            <tr>
                                <th class="my-0 text-black font-w500 fs-20">Items</th>
                                <th class="my-0 text-black font-w500 fs-20">Price</th>
                                <th class="text-black font-w500 fs-20">Qty.</th>
                            </tr>

                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="media">
                                            <a href="ecom-product-detail.html">
                                                <img class="me-3 img-fluid rounded product-image" src="~/ProductImage/@product.Image" alt="@product.Name">
                                            </a>
                                            <div class="media-body">
                                                <h5 class="mt-0 mb-2 text-black mb-4">
                                                    <a class="text-black" href="ecom-product-detail.html">@product.Name</a>
                                                </h5>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <h4 class="my-0 text-secondary font-w600">@product.Price</h4>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <a class="btn btn-primary shadow btn-xs me-2" onclick="decrementQty(this)" id=""><i>-</i></a>
                                            <input type="text" class="form-control quantity-input text-center mx-2" id="textqty_@product.Id" value="0" style="width: 50px;">
                                            <a class="btn btn-primary shadow btn-xs ms-2" onclick="incrementQty(this)"><i>+</i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-primary mt-2" id="btnOrder">Order Now</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/metisMenu/2.7.9/metisMenu.min.js"></script>
    <script>
        jQuery(function () {

            jQuery('#autocomplete').autocomplete({
                source: ["ActionScript",
                    "1029",
                    "1030",
                    "1031",
                    "1032",]
            });

        });

        function incrementQty(element) {
            var input = element.previousElementSibling;
            var currentValue = parseInt(input.value);
            input.value = currentValue + 1;
        }

        function decrementQty(element) {
            var input = element.nextElementSibling;
            var currentValue = parseInt(input.value);
            if (currentValue > 0) {
                input.value = currentValue - 1;
            }
        }
        $(document).ready(function () {
            $("#btnOrder").click(function () {
                var officeNo = $('#selectOfficeNo').val();
                var products = [];
                $('input.quantity-input').each(function () {
                    var productId = $(this).attr('id').split('_')[1];
                    var quantity = $(this).val();
                    if (quantity > 0) {
                        products.push({ id: productId, quantity: quantity });
                    }
                });

                if (products.length > 0) {
                    var orderData = {
                        officeNo: officeNo,
                        products: products
                    };

                    $.ajax({
                        url: '/Order/CustomerProductOrder',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(orderData),
                        success: function (result) {
                            toastr.success('Order Added');
                            // Reload the entire page
                            window.location.reload();
                        },
                        error: function (xhr, status, error) {
                            toastr.error('Error adding order');
                            console.error('AJAX error:', error);
                        }
                    });
                } else {
                    toastr.error('Select at least one product');
                }
            });
        });
    </script>
}
