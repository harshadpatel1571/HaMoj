@model List<Hamoj.Service.Dto.OrderDto>

@{
    Layout = "~/Views/Shared/_Customer.cshtml";
    ViewData["Title"] = "View Report";
}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataGrid" class="display" style="min-width: 845px">
                    <thead>
                        <tr>
                            <th>Id</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var columns = [
                { data: "office_No" },
                {
                    data: null,
                    render: function (data, type, row) {
                        console.l
                        return `<div class="d-flex">
                                            <a href="/GetReport/GetReport/${data.id}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                            <a href="#" class="btn btn-danger shadow btn-xs sharp" onclick="deleteCustomer(${row.id})"><i class="fas fa-trash"></i></a>
                                        </div>`;
                    }
                }
            ];

            $('#dataGrid').DataTable({
                ajax: {
                    url: '@Url.Action("GetReport", "Report")',
                    type: 'POST', // Adjust type as per your server-side handling (POST or GET)
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    dataSrc: 'data',
                    error: function (xhr, error, thrown) {
                        console.error("AJAX Error: " + error); // Log the error to console
                        alert('An error occurred while loading data. Check console for more details.');
                    }
                },
                columns: columns
            });
        });

        function deleteCustomer(customerId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/Customer/Delete/${customerId}`,
                        type: 'POST',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (result) {
                            var table = $('#dataGrid').DataTable();
                            table.ajax.reload();
                            toastr.success('Record Deleted');
                        },
                        error: function (xhr, status, error) {
                            console.error("Delete request failed: " + error); // Log delete request error
                            toastr.error('Failed to delete record.');
                        }
                    });
                }
            });
        }
    </script>
}


