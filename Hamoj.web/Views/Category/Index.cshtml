<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Category</h4>
            <button type="submit" class="btn btn-primary">Add Category</button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataGrid" class="display" style="min-width: 845px">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script>
        $(document).ready(function () {
            columns = [
                { data: "id" },
                {
                    data: "image",
                    render: function (data,type,row) {
                        console.log(row);
                        return `<img class="rounded-circle" width="35" src="${row.image}" alt=" "/>`;
                    }
                },
                { data: "name" },

                {
                    data: "id",

                    render: function (row) {
                        return `<div class="d-flex">
                                            <a href="#" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                            <a href="#" class="btn btn-danger shadow btn-xs sharp"><i class="fas fa-trash"></i></a>
                                        </div>`;
                    }
                }
            ];

            BindGrid('/Category/BindData', columns);
        });

    </script>
}
