@model Hamoj.Service.Dto.CatrgoryDto

@{
    ViewData["Title"] = "Category AddEdit";
}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add Category</h4>
        <a type="submit" class="btn btn-primary" asp-controller="Category" asp-action="Index">Back</a>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form method="post" asp-action="AddEdit" enctype="multipart/form-data">

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="formFileDisabled" class="form-label">Image</label>
                        <input class="form-control" type="file"  asp-for="Imagefile">
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="is_Active" checked>
                        <label class="form-check-label" for="flexSwitchCheckChecked">is Active</label>
                    </div>
                    <div>
                        <button type="submit"  id="btnsave"class="btn btn-primary">Save</button>
                    </div>
            </form>
        </div>
    </div>
</div>

