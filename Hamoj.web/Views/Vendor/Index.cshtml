@{
    ViewData["Title"] = "Vendor List";
}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Vendor</h4>
            <a type="submit" class="btn btn-primary" asp-controller="Vendor" asp-action="AddEdit">Add Vendor</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataGrid" class="display" style="min-width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile No</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            columns = [
                { data: "id" },
                { data: "name" },
                { data: "email" },
                { data: "mobileNumber" }, // This should match the property name in your DTO/model
                { data: "address" },
                {
                    data: "id",

                    render: function (data, type, row) {
                        return `<div class="d-flex">
                                            <a href="/Vendor/AddEdit/${row.id}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                            <a  class="btn btn-danger shadow btn-xs sharp" onclick="deletevendor(${row.id})"><i class="fas fa-trash"></i></a>
                                        </div>`;
                    }
                }
            ];

            BindGrid('/Vendor/BindData', columns);
        });

        function deletevendor(vendorId) {
            Swal.fire({
                title: "Are you sure to delete?",
                text: "You Want To Delete Vendor",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: '#d33',
                confirmButtonText: "Yes, delete it!!",
                cancelButtonText: "cancel!",
                closeOnConfirm: false
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/Vendor/Delete/${vendorId}`,
                        type: 'POST',
                        success: function (result) {
                            var table = $('#dataGrid').DataTable();
                            table.ajax.reload();
                            toaster('success', 'Record Deleted');
                        },
                    });
                }
            });
        }
    </script>
}
