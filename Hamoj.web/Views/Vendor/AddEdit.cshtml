@model Hamoj.Service.Dto.VendorDto;

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add Vendor</h4>
        <a type="submit" class="btn btn-primary" asp-controller="Vendor" asp-action="Index">Back</a>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form method="post" asp-action="AddEdit">
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" placeholder="Name" name="Name" asp-for="Name">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" placeholder="Email" name="Email" asp-for="Email">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Phone Number</label>
                        <input type="number" class="form-control" placeholder="Phone Number" name="Phone" asp-for="Phone">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label>Contact Number</label>
                        <input type="number" class="form-control" placeholder="Contact Number" name="Contact_Phone" asp-for="Contact_Phone">
                    </div>
                    <div class="mb-3 col-md-12">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="Address" name="Address" asp-for="Address">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>