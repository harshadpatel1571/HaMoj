@model Hamoj.Service.Dto.VendorDto

@{
    ViewData["Title"] = "Vendor AddEdit";
}

<partial name="~/Views/Shared/_Breadcrumb.cshtml" />
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Add Vendor</h4>
        <a type="submit" class="btn btn-primary" asp-controller="Vendor" asp-action="Index">Back</a>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form method="post" asp-action="AddEdit">
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" placeholder="Name" name="Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" placeholder="Email" name="Email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Mobile Number</label>
                        <input type="number" class="form-control" placeholder="Mobile Number" name="MobileNumber" asp-for="MobileNumber">
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="Address" name="Address" asp-for="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>


